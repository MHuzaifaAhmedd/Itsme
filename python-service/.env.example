# ===========================================
# NEXI AI Chatbot - Python Service Configuration
# ===========================================

# Server Configuration
PORT=8000
HOST=0.0.0.0

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3003,http://127.0.0.1:3000

# ===========================================
# AI Provider Configuration (Chat Completions)
# ===========================================

# AI Provider Selection (REQUIRED)
# Options: "openai" | "groq"
# Default: groq (free tier, fast)
AI_PROVIDER=groq

# Provider API Keys
# Groq key for chat completions: https://console.groq.com/keys (FREE)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI key (REQUIRED for embeddings, even when using Groq for chat)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model Selection (optional, has defaults)
# Groq default: llama-3.1-8b-instant
# OpenAI default: gpt-4o-mini
# AI_MODEL=llama-3.1-8b-instant

# Response Configuration
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# ===========================================
# Pinecone Configuration (Phase 2: Semantic Search)
# ===========================================

# Pinecone API Key
# Get your key at: https://app.pinecone.io/ (FREE tier available)
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Index Settings
PINECONE_INDEX_NAME=nexi-portfolio
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1

# ===========================================
# Embedding Configuration
# ===========================================

# Embedding model (uses OpenAI API)
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Semantic search settings
SEMANTIC_SEARCH_TOP_K=3
SEMANTIC_SEARCH_THRESHOLD=0.7

# Enable/disable semantic search (set to false to use full context)
USE_SEMANTIC_SEARCH=true

# ===========================================
# Rate Limiting (optional overrides)
# ===========================================
# RATE_LIMIT_PER_MINUTE=10
# RATE_LIMIT_PER_HOUR=50

# ===========================================
# Phase 4: Error Tracking (Sentry)
# ===========================================

# Sentry DSN for error tracking
# Get your DSN at: https://sentry.io/ (FREE tier available)
# Leave empty to disable Sentry
SENTRY_DSN=

# Environment name (development, staging, production)
ENVIRONMENT=development

# ===========================================
# Phase 4: A/B Testing
# ===========================================

# Enable/disable A/B testing for prompts
AB_TESTING_ENABLED=true

# Optional seed for reproducible A/B test assignments
# AB_TEST_SEED=your_seed_here

# ===========================================
# Phase 4: Cost Monitoring
# ===========================================

# Enable token cost tracking
TRACK_TOKEN_COSTS=true

# Cost per 1000 tokens (update based on your pricing)
# OpenAI GPT-4o-mini rates (as of 2024)
OPENAI_COST_PER_1K_INPUT=0.00015
OPENAI_COST_PER_1K_OUTPUT=0.0006

# Groq rates (free tier)
GROQ_COST_PER_1K_TOKENS=0.0
